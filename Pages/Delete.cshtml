@page "{id}"
@model ChickenSoup.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Entry";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this entry?</h3>

<div>
    <h4>@Model.Entry.Name</h4>
    <p>@Model.Entry.Description</p>
    <p><strong>Category:</strong> @Model.Entry.Category</p>
    <p><strong>Created At:</strong> @Model.Entry.CreatedAt.ToString("MM/dd/yyyy")</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Index" class="btn btn-secondary">Cancel</a>
</form>
