<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChickenSoup</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChickenSoup.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ChickenSoup</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Entries">Entries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/VisualEntries">Visual Entries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <!-- "I'm having an awful day!" button -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <button id="awfulDayButton" class="btn custom-awful-button">I'm having an awful day!</button>
                            </li>
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ChickenSoup - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script for Awful Button -->
    <script>
        document.getElementById("awfulDayButton").addEventListener("click", function() {
            // List of random funny YouTube video URLs
            var funnyVideos = [
                "https://www.youtube.com/watch?v=dQw4w9WgXcQ",  // Rickroll link
                "https://youtu.be/7ZhdXgRfxHI?si=J2y48a89xQKKvAve",  // BBC Earth w/- David Attenborough
                "https://youtu.be/a9LR7s385sU?si=Dbri801BZGs8JI_V",  // Japanese Restaurant
                "https://www.youtube.com/watch?v=kJQP7kiw5Fk",  // Despacito (if that's funny)
            ];
            
            // Get a random index from the funnyVideos array
            var randomIndex = Math.floor(Math.random() * funnyVideos.length);

            // Open the selected video in a new tab
            window.open(funnyVideos[randomIndex], '_blank');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
